<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daily Blog</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="css/style.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
    }

    .container {
      flex: 1;
      max-width: 800px;
      margin: 0 auto;
      /* padding: 40px; */
    }

    h1 {
      font-size: 32px;
      font-weight: bold;
      margin-top: 0;
      margin-bottom: 20px;
    }

    p {
      font-size: 18px;
      margin-bottom: 20px;
    }

    .writeBtn {
      display: flex;
      flex-direction: row;
      align-items: center;
      justify-content: start;
      margin-bottom: 40px;
    }

    .newBtn {
      height: 40px;
      width: 150px;
      border: none;
      outline: none;
      color: white;
      border-radius: 8px;
      background-color: rgb(45, 104, 172);
      cursor: pointer;
      font-size: 16px;
      font-weight: bold;
      transition: background-color 0.3s ease;
    }

    .newBtn:hover {
      background-color: rgb(30, 80, 132);
    }

    .post-container {
      background-color: #eeeeee;
      border-radius: 8px;
      padding: 20px;
      margin-bottom: 20px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
    }

    .post-title {
      font-size: 24px;
      font-weight: bold;
      margin-top: 0;
      margin-bottom: 10px;
    }

    .post-content {
      font-size: 18px;
      margin-bottom: 0;
    }

    footer {
      flex-shrink: 0;
      padding: 20px;
      text-align: center;
      background-color: transparent;
    }
    .scroll-down-btn {
      z-index: 1000;
      position: fixed;
      bottom: 20px;
      right: 20px;
      background-color: rgb(45, 104, 172);
      color: white;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      border: none;
      outline: none;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 20px;
      transition: background-color 0.3s ease;
    }
.reply{
  margin-left: 5px;
  cursor: pointer;
}
.like{
  cursor: pointer;
}
/* .reply_container{
  display: none;
} */
.show{
  display: none;
}
.btn{
  margin-top: 10px;
}
    
  </style>
</head>
<body>
  <header>
    <%- include('partials/header.ejs') -%>
  </header>

  <div class="container" id="cont">
    <div class="row">
      <div class="col-md-6">
        
        <div class="writeBtn">


         
  <div class="content">
    <div class="container post-container" id="cont">
      <h1 class="post-title">Write New Post</h1>
      <form action="/compose" method="post">
        
        <div class="form-group">
          <textarea class="form-control" id="post" name="content" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary" style="background-color: rgb(45, 104, 172);">Publish</button>
      </form>
      
    </div>
  </div>

          <!-- <form action="/compose">
            <button class="newBtn" type="submit" name="postBtn">Write New Post</button>
          </form> -->
        </div>
        <hr>
      </div>
    </div>

  <div class="row">
    <div class="col-md-6">
      <% for (let i = posts.length - 1; i >= 0; i--) { %>
        
      <div class="post-container">
        <h1 class="post-title"><%= posts[i].title %></h1>
        <p class="post-content"><%= posts[i].contents %></p>
        <div class="post-actions">
          <hr>
          <i class="far fa-heart like" id="like"></i> <!-- Font Awesome icon for "like" -->

          <i class="fa fa-reply reply" aria-hidden="true"></i> 
        </div>
        <form action="/compose" method="post">

        <div class="reply-container reply_container show">
          <div class="input-group mb-3">
            <textarea class="form-control" name="content" rows="3" placeholder="Type your reply..."></textarea>
          </div>
            <button type="submit" class="btn btn-primary reply-send-btn">Send</button>
        </div>
      </form>

      </div>

      <% } %>
    </div>
  </div>
  
 <!-- Add the scroll down button -->
  <a href="#cont" class="scroll-down-btn">
    <i class="fas fa-chevron-down"></i>
  </a>

    <footer><%- include('partials/footer.ejs') -%></footer>
     <script>
    const scrollDownBtn = document.querySelector('.scroll-down-btn');
    const targetElement = document.querySelector('.footer');

    scrollDownBtn.addEventListener('click', (e) => {
      e.preventDefault();
      targetElement.scrollIntoView({ behavior: 'smooth' });
    });

    const reply_container = document.querySelector(".reply_container");

    // const replyIcon = document.querySelectorAll('.fa-reply');

    // replyIcon.forEach(icon =>{
    //   icon.addEventListener("click",function(){
    //     reply_container.classList.toggle('show');
    //   })
    // })

    const replyIcons = document.querySelectorAll('.fa-reply');
    replyIcons.forEach(icon => {
      icon.addEventListener('click', function () {
        // Find the closest post container
        const postContainer = icon.closest('.post-container');

        // Find the reply container within the post container
        const replyContainer = postContainer.querySelector('.reply-container');

        // Toggle the 'show' class for the reply container
        replyContainer.classList.toggle('show');
      });
    });
  </script>
  </body>
 
</html>